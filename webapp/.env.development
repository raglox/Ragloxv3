# ═══════════════════════════════════════════════════════════════════════════════
# RAGLOX v3.0 - Development Environment Configuration
# Safe defaults for local development and testing
# ═══════════════════════════════════════════════════════════════════════════════

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ Application Settings                                                         │
# └─────────────────────────────────────────────────────────────────────────────┘
APP_NAME=RAGLOX
APP_VERSION=3.0.0-dev
APP_ENV=development
DEBUG=true
DEV_MODE=true
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ API Configuration                                                            │
# └─────────────────────────────────────────────────────────────────────────────┘
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
CORS_ORIGINS=*

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ Security Settings (Development)                                              │
# └─────────────────────────────────────────────────────────────────────────────┘
# Auto-generated in dev mode - DO NOT use in production!
JWT_SECRET=
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=48

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ PostgreSQL Configuration (Local Docker)                                      │
# └─────────────────────────────────────────────────────────────────────────────┘
DATABASE_URL=postgresql://raglox:raglox_dev@localhost:5432/raglox
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ Redis Configuration (Local Docker)                                           │
# └─────────────────────────────────────────────────────────────────────────────┘
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MODE=standalone
REDIS_MAX_CONNECTIONS=50

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ LLM Provider Configuration                                                   │
# └─────────────────────────────────────────────────────────────────────────────┘
LLM_ENABLED=true

# ═══════════════════════════════════════════════════════════════
# Default: Mock Provider (No API key needed)
# ═══════════════════════════════════════════════════════════════
LLM_PROVIDER=mock

# ═══════════════════════════════════════════════════════════════
# Option: BlackBox AI (Free - No API key needed)
# ═══════════════════════════════════════════════════════════════
# LLM_PROVIDER=blackbox
# LLM_API_BASE=https://api.blackbox.ai
# LLM_MODEL=blackboxai/openai/gpt-4o-mini

# ═══════════════════════════════════════════════════════════════
# Option: OpenAI (If you have API key)
# ═══════════════════════════════════════════════════════════════
# LLM_PROVIDER=openai
# OPENAI_API_KEY=sk-your-key-here
# LLM_MODEL=gpt-4o-mini

LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2048
LLM_TIMEOUT=30
LLM_FALLBACK_ENABLED=true

# LLM Safety Limits (Lower for development)
LLM_MAX_COST_LIMIT=1.0
LLM_DAILY_REQUESTS_LIMIT=50
LLM_MISSION_REQUESTS_LIMIT=10
LLM_SAFETY_MODE=true

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ MinIO / S3 Storage (Local Docker)                                            │
# └─────────────────────────────────────────────────────────────────────────────┘
S3_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=raglox_access
MINIO_SECRET_KEY=raglox_secret_dev

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ Security Middleware (Relaxed for development)                                │
# └─────────────────────────────────────────────────────────────────────────────┘
SECURITY_VALIDATION_ENABLED=true
RATE_LIMITING_ENABLED=false

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ Mission Configuration (Lower limits for dev)                                 │
# └─────────────────────────────────────────────────────────────────────────────┘
MISSION_TIMEOUT_SECONDS=3600
MAX_CONCURRENT_MISSIONS=3
MAX_WORKERS_PER_SPECIALIST=2

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ Metasploit (Disabled in dev)                                                 │
# └─────────────────────────────────────────────────────────────────────────────┘
USE_REAL_EXPLOITS=false

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ SSH Infrastructure (Development)                                             │
# └─────────────────────────────────────────────────────────────────────────────┘
SSH_ENABLED=true
SSH_MAX_CONNECTIONS=10
SSH_AUTO_ADD_HOST_KEYS=true

# ┌─────────────────────────────────────────────────────────────────────────────┐
# │ Testing Environment                                                          │
# └─────────────────────────────────────────────────────────────────────────────┘
# For integration tests with vulnerable targets
TEST_SSH_HOST=localhost
TEST_SSH_PORT=2222
TEST_SSH_USER=root
TEST_SSH_PASSWORD=toor
RAGLOX_TEST_MODE=safe

# Knowledge Base
KNOWLEDGE_DATA_PATH=./data
