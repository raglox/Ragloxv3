# Environment Configuration for Production Testing
# This file contains test-specific settings

# ==========================================
# Application Settings
# ==========================================
APP_NAME=RAGLOX
APP_VERSION=3.0.0
DEBUG=false
DEV_MODE=false
ENVIRONMENT=testing

# ==========================================
# API Settings
# ==========================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=false
CORS_ORIGINS=*

# ==========================================
# Database Settings
# ==========================================
DATABASE_HOST=postgres-test
DATABASE_PORT=5432
DATABASE_NAME=raglox_test_production
DATABASE_USER=raglox_test
DATABASE_PASSWORD=test_password_secure_123
DATABASE_URL=postgresql://raglox_test:test_password_secure_123@postgres-test:5432/raglox_test_production

# Database Pool Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# ==========================================
# Redis Settings
# ==========================================
REDIS_HOST=redis-test
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://redis-test:6379/0
REDIS_MAX_CONNECTIONS=100

# Redis Mode
REDIS_MODE=standalone

# ==========================================
# Security Settings
# ==========================================
JWT_SECRET_KEY=test-secret-key-for-production-tests-only-change-in-real-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
JWT_REFRESH_EXPIRATION_DAYS=7

# Password Requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true

# ==========================================
# LLM Settings (for testing with real LLM)
# ==========================================
LLM_ENABLED=true
LLM_PROVIDER=openai
LLM_MODEL=gpt-3.5-turbo
LLM_API_KEY=sk-test-key
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=60

# LLM Safety
LLM_SAFETY_MODE=true
LLM_CONTENT_FILTER=true

# ==========================================
# Mission Settings
# ==========================================
MAX_CONCURRENT_MISSIONS=10
MAX_MISSIONS_PER_MONTH=1000
MISSION_TIMEOUT=3600
MAX_TARGETS_PER_MISSION=100

# ==========================================
# Exploitation Settings (DISABLED for testing)
# ==========================================
EXPLOIT_DISABLED=true
EXPLOIT_REQUIRE_APPROVAL=true
EXPLOIT_MAX_ATTEMPTS=3

# ==========================================
# Logging Settings
# ==========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/raglox-test.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5

# ==========================================
# Monitoring Settings
# ==========================================
METRICS_ENABLED=true
METRICS_PORT=9090
TRACING_ENABLED=false

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==========================================
# Test-Specific Settings
# ==========================================
TEST_MODE=true
TEST_DATA_CLEANUP=true
TEST_TIMEOUT=300

# Test Targets
TEST_TARGET_NETWORK=192.168.100.0/24
TEST_TARGET_DVWA=192.168.100.10
TEST_TARGET_WEBGOAT=192.168.100.11
TEST_TARGET_JUICESHOP=192.168.100.12
TEST_TARGET_NGINX=192.168.100.13
