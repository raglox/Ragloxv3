# ═══════════════════════════════════════════════════════════════
# PostgreSQL Database (TEST - Mock)
# ═══════════════════════════════════════════════════════════════
DATABASE_URL=postgresql://test:test@localhost:54322/raglox_test
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ═══════════════════════════════════════════════════════════════
# Redis (TEST - Mock)
# ═══════════════════════════════════════════════════════════════
REDIS_URL=redis://localhost:6379/15
REDIS_MAX_CONNECTIONS=10

# ═══════════════════════════════════════════════════════════════
# JWT Authentication (TEST)
# ═══════════════════════════════════════════════════════════════
JWT_SECRET=test_jwt_secret_key_for_testing_only_32chars_minimum
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=1

# ═══════════════════════════════════════════════════════════════
# Stripe Billing (TEST - Disabled)
# ═══════════════════════════════════════════════════════════════
STRIPE_ENABLED=false
STRIPE_SECRET_KEY=sk_test_mock
STRIPE_PUBLISHABLE_KEY=pk_test_mock
STRIPE_WEBHOOK_SECRET=whsec_test_mock

# ═══════════════════════════════════════════════════════════════
# LLM Configuration (TEST - Mock Provider)
# ═══════════════════════════════════════════════════════════════
LLM_ENABLED=true
LLM_PROVIDER=mock
LLM_MODEL=mock-model
LLM_API_KEY=test-key
LLM_API_BASE=http://localhost:8001
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=1024
LLM_TIMEOUT=30.0

# ═══════════════════════════════════════════════════════════════
# Knowledge Base (TEST)
# ═══════════════════════════════════════════════════════════════
KNOWLEDGE_DATA_PATH=data

# ═══════════════════════════════════════════════════════════════
# CORS Configuration (TEST)
# ═══════════════════════════════════════════════════════════════
CORS_ORIGINS=*

# ═══════════════════════════════════════════════════════════════
# API Configuration (TEST)
# ═══════════════════════════════════════════════════════════════
API_HOST=127.0.0.1
API_PORT=8001
API_DEBUG=true
API_RELOAD=false

# ═══════════════════════════════════════════════════════════════
# Security (TEST - Disabled)
# ═══════════════════════════════════════════════════════════════
SECURITY_VALIDATION_ENABLED=false
RATE_LIMITING_ENABLED=false

# ═══════════════════════════════════════════════════════════════
# Real Exploitation (TEST - Disabled)
# ═══════════════════════════════════════════════════════════════
USE_REAL_EXPLOITS=false
MSF_RPC_HOST=localhost
MSF_RPC_PORT=55553
MSF_RPC_USER=test
MSF_RPC_PASS=test
MSF_RPC_SSL=false

# ═══════════════════════════════════════════════════════════════
# SSH Configuration (TEST - Disabled)
# ═══════════════════════════════════════════════════════════════
SSH_ENABLED=false
SSH_MAX_CONNECTIONS=5
SSH_KEEPALIVE_INTERVAL=30

# ═══════════════════════════════════════════════════════════════
# Logging (TEST)
# ═══════════════════════════════════════════════════════════════
LOG_LEVEL=DEBUG
LOG_FORMAT=text

# ═══════════════════════════════════════════════════════════════
# Cloud Providers (TEST - Disabled)
# ═══════════════════════════════════════════════════════════════
ONEPROVIDER_ENABLED=false
FIRECRACKER_ENABLED=false
