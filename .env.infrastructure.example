# RAGLOX v3.0 - Infrastructure Configuration
# Configuration for Agent Environment System

# OneProvider API Credentials
ONEPROVIDER_API_KEY=your_api_key_here
ONEPROVIDER_CLIENT_KEY=your_client_key_here
ONEPROVIDER_PROJECT_UUID=your_project_uuid_here

# Default VM Configuration
DEFAULT_VM_PLAN=8GB-2CORE
DEFAULT_VM_OS=ubuntu-22.04
DEFAULT_VM_LOCATION=us-east

# SSH Configuration
SSH_CONNECTION_TIMEOUT=30
SSH_KEEPALIVE_INTERVAL=30
SSH_MAX_RETRIES=3

# Environment Limits
MAX_ENVIRONMENTS_PER_USER=10
ENVIRONMENT_IDLE_TIMEOUT=3600  # seconds

# Health Monitoring
HEALTH_CHECK_INTERVAL=60  # seconds
HEALTH_LATENCY_THRESHOLD=1000  # milliseconds
AUTO_RECONNECT_ENABLED=true

# Resource Monitoring
RESOURCE_POLL_INTERVAL=60  # seconds
BANDWIDTH_WARNING_THRESHOLD=0.8  # 80%
BANDWIDTH_CRITICAL_THRESHOLD=0.95  # 95%
DISK_WARNING_THRESHOLD=0.8  # 80%
DISK_CRITICAL_THRESHOLD=0.9  # 90%

# Billing
BANDWIDTH_OVERAGE_RATE=0.02  # $0.02 per GB

# Security
ALLOWED_SSH_HOSTS=*
REQUIRE_SSH_KEYS=false
SANDBOX_AUTO_DESTROY_IDLE=false
SANDBOX_MAX_LIFETIME=86400  # 24 hours in seconds
